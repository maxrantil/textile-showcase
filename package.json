{
  "name": "textile-showcase",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:mobile": "NEXT_PUBLIC_FORCE_MOBILE=true next dev",
    "dev:desktop": "NEXT_PUBLIC_FORCE_DESKTOP=true next dev",
    "build": "NODE_OPTIONS='--max-old-space-size=1536' next build",
    "build:dev": "NODE_OPTIONS='--max-old-space-size=4096' next build",
    "build:production": "NODE_OPTIONS='--max-old-space-size=1536' next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:performance": "jest tests/performance --coverage=false",
    "test:mobile-hooks": "jest tests/unit/mobile-hooks --coverage",
    "test:integration": "jest tests/integration --coverage",
    "test:regression": "node -r ts-node/register tests/scripts/regression-check.ts",
    "test:phase3": "npm run test:mobile-hooks && npm run test:integration && npm run test:regression",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:e2e:smoke": "playwright test tests/e2e/workflows/smoke-test.spec.ts",
    "build:analyze": "ANALYZE=true npm run build:dev",
    "build:test": "npm run build:dev && npm run test:performance",
    "bundle:analyze": "node __tests__/deployment/bundle-analyzer.js .next && echo 'Bundle analysis complete'",
    "type-check": "tsc --noEmit",
    "security:headers": "echo 'Security headers validation not implemented yet'",
    "setup-credentials": "ts-node scripts/setup-credentials.ts",
    "validate-credentials": "ts-node scripts/validate-credentials.ts",
    "rotate-credentials": "./scripts/emergency-credential-rotation.sh",
    "credentials:test": "ts-node -e \"import('./src/lib/security/environment-loader').then(m => m.testCredentialSystem())\"",
    "credentials:status": "ts-node -e \"import('./src/lib/security/environment-loader').then(m => m.getCredentialStatus().then(console.log))\"",
    "deploy:production": "./scripts/deploy-production.sh",
    "studio:install": "npm install @sanity/cli @sanity/icons @sanity/vision sanity",
    "studio:setup": "npm run studio:install && npm run dev"
  },
  "dependencies": {
    "@sanity/client": "^7.3.0",
    "@sanity/image-url": "^1.1.0",
    "critters": "^0.0.23",
    "isomorphic-dompurify": "^2.26.0",
    "next": "^15.3.0",
    "next-sanity": "^11.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-is": "^19.1.0",
    "resend": "^4.5.2",
    "sharp": "^0.34.3",
    "styled-components": "^6.1.18"
  },
  "peerDependencies": {
    "@sanity/cli": "^3.90.0",
    "@sanity/icons": "^3.7.0",
    "@sanity/vision": "^4.9.0",
    "sanity": "^4.9.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/eslintrc": "^3",
    "@jest/globals": "^30.1.2",
    "@next/bundle-analyzer": "^15.5.2",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^20.17.50",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "canvas": "^3.2.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "glob": "^11.0.2",
    "jest": "^30.0.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "web-vitals": "^5.1.0",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "resolutions": {
    "**/glob": "^11.0.2",
    "**/inflight": "^1.0.6"
  },
  "engineStrict": true
}
